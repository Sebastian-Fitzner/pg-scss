component: Figure
---

<figure class="c-figure{{#if figure-modifier-class}}--{{figure-modifier-class}}{{/if}} {{figure-classes}}" data-css="c-figure">

	{{#if figure-picture}}
		{{partial "c-picture"}}
	{{else}}{{#if figure-video}}
		{{partial "c-video"}}
	{{/if}}{{/if}}

	{{#if figure-caption}}
		<figcaption class="figure__caption {{figure-caption-classes}}">
			{{ figure-caption }}
		</figcaption>
	{{/if}}

</figure>